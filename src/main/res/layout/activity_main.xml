<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:id="@+id/parent"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text"
        android:text="Hello from Tristan!"
        android:textSize="40sp"
        android:textColor="@color/mainText"
        android:gravity="center"
        android:background="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/changeCustomTextButton"
        android:text="Change Text String"
        android:textSize="30sp"
        android:textColor="@color/buttonTextColor"
        android:textAlignment="center"
        android:background="@color/buttonColor"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/editText"
        android:layout_width="380dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editText"
        android:hint="Create Your Own Text"
        android:textSize="25dp"
        android:background="@color/textEditBackground"
        android:paddingLeft="20dp"
        android:layout_marginBottom="22dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/changeTextButton"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:ems="10" />

    <TextView
        android:id="@+id/changeTextButton"
        android:text="Change Text"
        android:textSize="30sp"
        android:textColor="@color/buttonTextColor"
        android:textAlignment="center"
        android:background="@color/buttonColor"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/changeBackgroundButton"
        android:layout_width="380dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/changeBackgroundButton"
        android:text="Change Background"
        android:textSize="30sp"
        android:textColor="@color/buttonTextColor"
        android:textAlignment="center"
        android:background="@color/buttonColor"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/changeTextColorButton"
        android:layout_width="380dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/changeTextColorButton"
        android:text="Change Text Color"
        android:textSize="30sp"
        android:textColor="@color/buttonTextColor"
        android:textAlignment="center"
        android:background="@color/buttonColor"
        android:padding="10dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="380dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>